{
  "schemaVersion": 1,
  "id": "system0",
  "version": "${version}",

  "name": "System0",
  "description": "A mod about exploration, telecommunications and magic.",
  "authors": [
    "ethobat"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/system0/s0_noise.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.ethobat.system0.System0"
    ],
    "client": [
      "net.ethobat.system0.System0Client"
    ],
    "cardinal-components": [
      "net.ethobat.system0.registry.S0Components"
    ]
  },
  "mixins": [
    "system0.mixins.json"
  ],

  "custom": {
    "cardinal-components" : [
      "system0:networks"
    ]
  },

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.19.x"
  },
  "suggests": {
    "another-mod": "*"
  }
}
